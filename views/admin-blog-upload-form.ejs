<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Blog Upload</title>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <style>
        .select2-container--default .select2-selection--multiple .select2-selection__choice {
            background-color: #007bff;
            border: 1px solid #007bff;
            color: white;
        }
    </style>
</head>
<body>
    <div class="dashboard">
        <!-- Sidebar -->
        <!-- <div class="sidebar">
            <div class="sidebar-logo">
                <img src="/logo.png" alt="Admin Logo">
            </div> -->
            <h2>Admin Functions</h2>
            <ul class="sidebar-menu">
                <li><a href="/admin/blogs" <% if (activePage === 'blogs') { %> class="active" <% } %>>View and Approve Blogs</a></li>
                <li><a href="/admin/blog" <% if (activePage === 'blog') { %> class="active" <% } %>>Upload Admin Blog</a></li>
                <li><a href="/admin/doctor-profile-requests" <% if (activePage === 'doctor-profile-requests') { %> class="active" <% } %>>Doctor Profile Verification Requests</a></li>
                <li><a href="/admin/subscriptions" <% if (activePage === 'subscriptions') { %> class="active" <% } %>>Doctor Subscription Verification Requests</a></li>
                <li><a href="/admin/insurances" <% if (activePage === 'insurances') { %> class="active" <% } %>>Manage Insurance Providers</a></li>
                <!-- <li><a href="/admin/blogs-all" <% if (activePage === 'blogs-all') { %> class="active" <% } %>>Search Blogs</a></li> -->
                <li><a href="/admin/view-doctors" <% if (activePage === 'view-doctors') { %> class="active" <% } %>>View Doctors</a></li>
                <li><a href="/admin/view-patients" <% if (activePage === 'view-patients') { %> class="active" <% } %>>View Patients</a></li>
                <li><a href="/admin/bookings" <% if (activePage === 'bookings') { %> class="active" <% } %>>View Bookings</a></li>
                <li><a href="/admin/insights" <% if (activePage === 'insights') { %> class="active" <% } %>>View Insights</a></li>
                <li><a href="/auth/logout" <% if (activePage === 'logout') { %> class="active" <% } %>>Logout</a></li>            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="container">
                <h1>Admin Blog Upload Form</h1>
                <form id="blogForm" action="/admin/blog-all" method="POST" enctype="multipart/form-data">
                    <label for="title">Title:</label><br>
                    <input type="text" id="title" name="title" required><br><br>
                    
                    <label for="author">Select Author (Doctor or Admin):</label>
                    <select name="authorId" id="author" required>
                        <option value="<%= admin._id %>"><%= admin.name %> (Admin)</option> <!-- Option to blog as admin -->
                        <% doctors.forEach(doctor => { %>
                            <option value="<%= doctor._id %>"><%= doctor.name %> (Doctor)</option>
                        <% }); %>
                    </select>


                    <label for="description">Description:</label><br>
                    <textarea id="description" name="description" rows="4" required></textarea><br><br>
                    
                    <label for="summary">Summary:</label><br>
                    <textarea id="summary" name="summary" rows="4" required></textarea><br><br>
                    
                    <label for="image">Upload Image:</label><br>
                    <input type="file" id="image" name="image" accept="image/*" required><br><br>
                    
                    <label for="categories">Categories:</label><br>
                    <select id="categories" name="categories" style="width: 100%;" required>
                        <option value="">Select Category</option>
                        <option value="Doctor">Doctor</option>
                        <option value="Travel">Travel</option>
                        <option value="Lifestyle">Lifestyle</option>
                        <option value="Medical">Medical</option>
                        <option value="Politics">Politics</option>
                        <option value="Sports">Sports</option>
                        <option value="Music">Music</option>
                        <option value="Fashion">Fashion</option>
                        <option value="Fitness">Fitness</option>
                    </select><br><br>
                    
                    <label for="subcategories">Subcategories:</label><br>
                    <select id="subcategories" name="subcategories" multiple="multiple" style="width: 100%;" required>
                        <!-- Subcategories will be populated based on the selected category -->
                    </select><br><br>
                    
                    <label for="hashtags">Hashtags:</label><br>
                    <select id="hashtags" name="hashtags" multiple="multiple" style="width: 100%;">
                        <option value="#blogger">#blogger</option>
                        <option value="#medfluencer">#medfluencer</option>
                        <option value="#wms">#wms</option>
                        <option value="#mbchb">#mbchb</option>
                        <!-- Other hashtags omitted for brevity -->
                        <option value="#doctorsofinstagram">#doctorsofinstagram</option>
                    </select><br><br>

                    <label for="priority">Priority:</label><br>
                    <select id="priority" name="priority">
                        <option value="high">High</option>
                        <option value="low">Low</option>
                    </select><br><br>

                    <button type="submit">Upload Blog</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#categories').select2({
                placeholder: "Select category",
                allowClear: true
            });
            $('#hashtags').select2({
                placeholder: "Select hashtags",
                allowClear: true
            });
            $('#subcategories').select2({
                placeholder: "Select subcategories",
                allowClear: true
            });

            const subcategoriesData = {
                "Doctor": ["General Surgery", "Oriental Medicine", "Latest Medical Research", "Common Medical Condition", "Mental Health", "Conventional Medicine", "Medical Education", "Psychology"],
                "Travel": ["Adventure", "Cultural", "Luxury", "Backpacking", "Budget Travel"],
                "Lifestyle": ["Healthy Living", "Home Decor", "Relationships", "Self-Care"],
                "Medical": ["Neurology", "Cardiology", "Dermatology", "Oncology", "Pediatrics"],
                "Politics": ["International", "Domestic", "Elections", "Policy"],
                "Sports": ["Football", "Basketball", "Cricket", "Tennis", "Athletics"],
                "Music": ["Classical", "Rock", "Pop", "Jazz", "Hip-Hop"],
                "Fashion": ["Trends", "Designers", "Runway", "Street Style"],
                "Fitness": ["Workouts", "Nutrition", "Yoga", "Mental Health"]
            };

            $('#categories').change(function() {
                const selectedCategory = $(this).val();
                const subcategories = subcategoriesData[selectedCategory] || [];
                
                $('#subcategories').empty().trigger('change');
                subcategories.forEach(subcategory => {
                    const newOption = new Option(subcategory, subcategory, false, false);
                    $('#subcategories').append(newOption).trigger('change');
                });
            });
        });
    </script>
</html>
