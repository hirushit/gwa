<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Find a Doctor</title>
    <style>
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 20px;
        }

        .filter-container, .auth-container, .blogs-container {
            width: 300px;
            margin-bottom: 20px;
        }

        .filter-container select, .filter-container input, .filter-container button, .auth-container a, .blogs-container button {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
        }

        .doctor-card {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
        }

        .user-info {
            position: absolute;
            top: 10px;
            right: 10px;
            font-weight: bold;
        }
        .blogs-container {
            width: 80%;
            margin: auto;
        }

        .blogs-container ul {
            list-style-type: none;
            padding: 0;
        }

        .blog-card {
            border: 1px solid #ddd;
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            display: flex;
            align-items: center;
        }

        .blog-card img {
            width: 100px;
            height: auto;
            margin-right: 20px;
            border-radius: 5px;
        }

        .blog-card h3 {
            margin: 0;
            font-size: 1.2em;
        }

        .blog-card p {
            margin: 0.5em 0 0 0;
        }

        button {
            padding: 10px 20px;
            font-size: 1em;
            cursor: pointer;
            border: none;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">


        <div class="auth-container">
            <% if (admin) { %>
                <h1>Welcome, Admin <%= admin.name %></h1>
            <% } else { %>
                <a href="/auth/login">Login</a>
                <a href="/auth/signup">Signup</a>
            <% } %>
            <a href="/admin/Dashboard">View Profile</a>
        </div>

        <div class="blogs-container">
            <h2> Blogs</h2>
            <ul>
                <% blogs.forEach(blog => { %>
                    <li class="blog-card">
                        <% if (blog.image && blog.image.data) { %>
                            <img src="data:<%= blog.image.contentType %>;base64,<%= blog.image.data.toString('base64') %>" alt="Blog Image">
                        <% } %>
                        <h3><%= blog.title %></h3>
                        <p><%= blog.content %></p>
                        <a href="/admin/blogs-all/view/<%= blog._id %>">Read More</a>
                    </li>
                <% }) %>
            </ul>
            <button onclick="window.location.href='/admin/blogs-all'">View All Blogs</button>
        </div>

        
    </div>

    
</body>
</html>
