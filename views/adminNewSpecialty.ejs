<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    display: flex;
    background-color: #f8f9fa;
}

.dashboard {
    display: flex;
    width: 100%;
}

.sidebar {
    width: 250px;
    background-color: #F7FAFF; 
    padding: 20px;
    display: flex;
    flex-direction: column;
    box-shadow: 2px 0 5px rgba(0,0,0,0.1);
}

.sidebar-logo {
    text-align: center; 
    margin-bottom: 20px;
}

.sidebar-logo img {
    width: 170px; 
    height: auto; 
}

.sidebar h2 {
    color: #42427D; 
    margin: 0 0 20px 0; 
    font-size: 16px;
}

.sidebar-menu {
    list-style: none;
    padding: 0;
}

.sidebar-menu li {
    margin: 10px 0;
}

.sidebar-menu li a {
    text-decoration: none;
    color: #A0AAC8; 
    display: block;
    padding: 10px;
    border-radius: 5px;
    transition: color 0.3s ease;
    font-size: 16px; 
}

.sidebar-menu li a.active,
.sidebar-menu li a:hover {
    color: #42427D; 
    background-color: transparent; 
}

.main-content {
    flex: 1;
    padding: 20px;
}

.container {
    width: 100%;
    margin: 20px auto;
    padding: 20px;
    border: 1px solid #e9ecef;
    border-radius: 5px;
    background-color: #fff;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    color: #42427D; 
}

.blogs-list {
    margin-top: 20px;
}

.blog-item {
    margin-bottom: 20px;
    border: 1px solid #ccc;
    padding: 10px;
    border-radius: 5px;
    background-color: #f8f9fa;
}

.blog-item h3 {
    margin-bottom: 5px;
}

.blog-item p {
    margin: 5px 0;
}

.success-message {
    background-color: #d4edda;
    color: #155724;
    border-color: #c3e6cb;
    padding: 10px;
    margin-bottom: 20px;
    border: 1px solid transparent;
    border-radius: .25rem;
}

button {
    background-color: transparent; 
    color: #42427D; 
    border: 1px solid #42427D; 
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 14px;
}

button:hover {
    background-color: #42427D; 
    color: white; 
}

a {
    color: #007bff; 
    text-decoration: none;
    font-size: 14px; 
    display: inline-block;
    padding: 5px 10px;
    border: 1px solid transparent; 
    border-radius: 5px;
    transition: background-color 0.3s ease, color 0.3s ease;
}

a:hover {
    background-color: #f0f0f0;
    color: #42427D; 
    text-decoration: underline;
}

.view-blog-link {
    display: block;
    margin-top: 10px;
    font-size: 14px;
    color: #42427D; 
}

select {
    border: 1px solid #42427D;
    padding: 5px;
    border-radius: 5px;
    font-size: 14px;
    color: #42427D; 
    background-color: #fff;
}

select:focus {
    outline: none; 
    box-shadow: 0 0 0 2px rgba(66, 133, 244, 0.2);
}

    </style>
</head>
<body>
    <div class="dashboard">
        <div class="sidebar">
            <div class="sidebar-logo">
                <img src="/logo.png" alt="Admin Logo">
            </div>
            <h2>Admin Functions</h2>
            <ul class="sidebar-menu">
                <li><a href="/admin/blogs" <% if (activePage === 'blogs') { %> class="active" <% } %>>View and Approve Blogs</a></li>
                <li><a href="/admin/blog" <% if (activePage === 'blog') { %> class="active" <% } %>>Upload Admin Blog</a></li>
                <li><a href="/admin/doctor-profile-requests" <% if (activePage === 'doctor-profile-requests') { %> class="active" <% } %>>Doctor Profile Verification Requests</a></li>
                <li><a href="/admin/subscriptions" <% if (activePage === 'subscriptions') { %> class="active" <% } %>>Doctor Subscription Verification Requests</a></li>
                <li><a href="/admin/insurances" <% if (activePage === 'insurances') { %> class="active" <% } %>>Manage Insurance Providers</a></li>
                <!-- <li><a href="/admin/blogs-all" <% if (activePage === 'blogs-all') { %> class="active" <% } %>>Search Blogs</a></li> -->
                <li><a href="/admin/view-doctors" <% if (activePage === 'view-doctors') { %> class="active" <% } %>>View Doctors</a></li>
                <li><a href="/admin/view-patients" <% if (activePage === 'view-patients') { %> class="active" <% } %>>View Patients</a></li>
                <li><a href="/admin/bookings" <% if (activePage === 'bookings') { %> class="active" <% } %>>View Bookings</a></li>
                <li><a href="/admin/insights" <% if (activePage === 'insights') { %> class="active" <% } %>>View Insights</a></li>
                <li><a href="/admin/manage-payments" <% if (activePage === 'manage-payments') { %> class="active" <% } %>>Manage Payments</a></li>
                <li><a href="/admin/specialty/new" class="<%= activePage === 'specialties' ? 'active' : '' %>">Manage Specialties</a></li>
                <li><a href="/admin/condition/new" class="<%= activePage === 'conditions' ? 'active' : '' %>">Manage Conditions</a></li>
                <li><a href="/admin/news-releases" <% if (activePage === 'news-releases') { %> class="active" <% } %>>Manage News Releases</a></li>
                <li><a href="/admin/news-logos" <% if (activePage === 'news-logos') { %> class="active" <% } %>>Manage News Logos</a></li> <!-- Added link for managing logos -->
                <li><a href="/auth/logout" <% if (activePage === 'logout') { %> class="active" <% } %>>Logout</a></li>
                
            </ul>
        </div>

        <div class="main-content">
            <div class="container">
                <h1>Add Specialty</h1>
                <form action="/admin/specialty" method="POST">
                    <label for="name">Specialty Name:</label>
                    <input type="text" id="name" name="name" required>
                    <button type="submit">Add Specialty</button>
                </form>
                <% if (typeof error_msg !== 'undefined') { %>
                    <p class="error-msg"><%= error_msg %></p>
                <% } %>

                <h2>Existing Specialties</h2>
                <ul>
                    <% specialties.forEach(specialty => { %>
                        <li>
                            <%= specialty.name %>
                            <form action="/admin/specialty/<%= specialty._id %>/delete" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this specialty?');">Delete</button>
                            </form>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</body>
</html>
