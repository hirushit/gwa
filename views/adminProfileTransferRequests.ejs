<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Transfer Requests</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    .modal {
      display: none; 
      position: fixed;
      z-index: 1; 
      left: 0;
      top: 0;
      width: 100%; 
      height: 100%; 
      overflow: auto; 
      background-color: rgba(0, 0, 0, 0.5);
      padding-top: 60px;
    }

    .modal-content {
      background-color: white;
      margin: 5% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 80%; 
      max-height: 80vh;
      overflow-y: auto;
    }

    .sidebar-menu li a.active {
      color: #42427D;
      background-color: transparent;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #42427D;
      color: white;
    }

    tr:hover {
      background-color: #f5f5f5;
    }

    @font-face {
      font-family: 'Matter-Regular';
      src: url('fonts/Matter-Regular.ttf') format('truetype');
      font-weight: normal;
      font-style: normal;
    }

    body {
      font-family: 'Matter-Regular', Arial, sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      background-color: #f8f9fa;
    }

    .dashboard {
      display: flex;
      width: 100%;
      height: 100vh; 
    }

    .sidebar {
      width: 250px;
      background-color: #F7FAFF;
      padding: 20px;
      display: flex;
      flex-direction: column;
      box-shadow: 2px 0 5px rgba(0,0,0,0.1);
      position: fixed;
      height: 100%;
      overflow-y: auto;
    }

    .sidebar-logo img {
      width: 170px;
      height: auto;
    }

    .sidebar-logo {
      text-align: center; 
      margin-bottom: 20px;
    }

    .sidebar-menu {
      list-style: none;
      padding: 0;
    }

    .sidebar-menu li {
      margin: 10px 0;
    }

    .sidebar-menu li a {
      text-decoration: none;
      color: #A0AAC8;
      display: block;
      padding: 3px;
      border-radius: 5px;
      transition: color 0.3s ease;
    }

    .sidebar-menu li a.active,
    .sidebar-menu li a:hover {
      color: #42427D;
      background-color: transparent;
    }

    .main-content {
      flex: 1;
      margin-left: 270px;
      padding: 20px;
      overflow-y: auto; 
    }

    .container {
      width: 100%; 
      margin: 20px 0;
      padding: 20px;
      border: 1px solid #e9ecef;
      border-radius: 5px;
      background-color: #fff;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .sidebar h2 {
      color: #42427D;
      margin: 0 0 20px 0; 
    }

    label {
      font-weight: bold;
      margin-bottom: 5px;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    select {
      width: 100%;
      padding: 8px;
      margin: 10px 0;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    button[type="submit"] {
      background-color: #42427D;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    button[type="submit"]:hover {
      background-color: #303152;
    }

    a {
      text-decoration: none;
      color: #007bff;
    }

    a:hover {
      text-decoration: underline;
    }

    .alert {
      padding: 10px;
      border-radius: 5px;
      margin: 20px 0;
    }

    .alert-success {
      background-color: #d4edda;
      color: #155724;
    }

    .alert-danger {
      background-color: #f8d7da;
      color: #721c24;
    }
  </style>
</head>
<body>
  <div class="dashboard">
    <div class="sidebar">
      <div class="sidebar-logo">
        <img src="/logo.png" alt="Admin Logo">
      </div>
      <h2>Admin Functions</h2>
      <ul class="sidebar-menu">
        <li><a href="/admin/create-account" <% if (activePage === 'create-account') { %> class="active" <% } %>>Create New Account</a></li>
        <li><a href="/admin/accounts" <% if (activePage === 'accounts') { %> class="active" <% } %>>Manage Accounts</a></li>
        <li><a href="/admin/profile-transfer-requests" <% if (activePage === 'profile-transfer-requests') { %> class="active" <% } %>>Profile Transfer Requests</a></li>
        <li><a href="/admin/blogs" <% if (activePage === 'blogs') { %> class="active" <% } %>>View and Approve Blogs</a></li>
        <li><a href="/admin/blog" <% if (activePage === 'blog') { %> class="active" <% } %>>Upload Admin Blog</a></li>
        <li><a href="/admin/doctor-profile-requests" <% if (activePage === 'doctor-profile-requests') { %> class="active" <% } %>>Doctor Profile Verification Requests</a></li>
        <li><a href="/admin/subscriptions" <% if (activePage === 'subscriptions') { %> class="active" <% } %>>Doctor Subscription Verification Requests</a></li>
        <li><a href="/admin/insurances" <% if (activePage === 'insurances') { %> class="active" <% } %>>Manage Insurance Providers</a></li>
        <li><a href="/admin/profile-transfer-requests" <% if (activePage === 'profile-transfer-requests') { %> class="active" <% } %>>Profile Transfer Requests</a></li>
        <li><a href="/admin/commission-fee" <% if (activePage === 'commission-fee') { %> class="active" <% } %>>Manage Commission Fee</a></li>
        <li><a href="/admin/view-doctors" <% if (activePage === 'view-doctors') { %> class="active" <% } %>>View Doctors</a></li>
        <li><a href="/admin/view-patients" <% if (activePage === 'view-patients') { %> class="active" <% } %>>View Patients</a></li>
        <li><a href="/admin/bookings" <% if (activePage === 'bookings') { %> class="active" <% } %>>View Bookings</a></li>
        <li><a href="/admin/insights" <% if (activePage === 'insights') { %> class="active" <% } %>>View Insights</a></li>
        <li><a href="/admin/manage-payments" <% if (activePage === 'manage-payments') { %> class="active" <% } %>>Manage Payments</a></li>
        <li><a href="/admin/specialty/new" <% if (activePage === 'specialties') { %> class="active" <% } %>>Manage Specialties</a></li>
        <li><a href="/admin/condition/new" <% if (activePage === 'conditions') { %> class="active" <% } %>>Manage Conditions</a></li>
        <li><a href="/admin/news-releases" <% if (activePage === 'news-releases') { %> class="active" <% } %>>Manage News Releases</a></li>
        <li><a href="/admin/news-logos" <% if (activePage === 'news-logos') { %> class="active" <% } %>>Manage News Logos</a></li> 
        <li><a href="/auth/logout" <% if (activePage === 'logout') { %> class="active" <% } %>>Logout</a></li>
      </ul>
    </div>

    <div class="main-content">
      <div class="container">
        <h1>Profile Transfer Requests</h1>

        <% if (requests.length > 0) { %>
          <table class="requests-table">
            <thead>
              <tr>
                <th>Email</th>
                <th>Role</th>
                <th>Requested By</th>
                <th>ID Proof</th>
                <th>Actions</th> 
              </tr>
            </thead>
            <tbody>
              <% requests.forEach((request) => { %>
                <% request.profileVerification.forEach((verification, index) => { %>
                  <tr>
                    <td><%= request.email %></td>
                    <td><%= request.role %></td>
                    <td><%= verification.email %></td>
                    <td>
                      <% if (verification.document) { %>
                        <button onclick="openModal('<%= verification.document.data.toString('base64') %>', '<%= verification.document.contentType %>')">
                          View
                        </button>
                      <% } else { %>
                        <p>No ID proof available</p>
                      <% } %>
                    </td>
                    <td>
                      <a href="/admin/account-view/<%= request._id %>" class="btn btn-primary btn-sm">View This Account</a>
                    </td>
                  </tr>
                <% }); %>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <p>No profile transfer requests found.</p>
        <% } %>
      </div>
    </div>
  </div>

  <div id="pdfModal" class="modal">
    <div class="modal-content">
      <button onclick="closeModal()">Close</button>
      <embed id="pdfViewer" type="application/pdf" width="100%" height="600px">
    </div>
  </div>

  <script>
    function openModal(pdfData, contentType) {
      document.getElementById('pdfViewer').setAttribute('src', 'data:' + contentType + ';base64,' + pdfData);
      document.getElementById('pdfModal').style.display = 'block';
    }

    function closeModal() {
      document.getElementById('pdfModal').style.display = 'none';
    }
  </script>
</body>
</html>
