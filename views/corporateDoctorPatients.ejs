<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Completed Bookings</title>
</head>
<body>
    <h2>Completed Bookings for Doctor</h2>

    <table border="1">
        <thead>
            <tr>
                <th>Patient Name</th>
                <th>Booking Date</th>
                <th>Time Slot</th>
                <th>Consultation Type</th>
                <th>Hospital</th>
            </tr>
        </thead>
        <tbody>
            <% if (completedBookings.length > 0) { %>
                <% completedBookings.forEach(booking => { %>
                    <tr>
                        <td><%= booking.patient ? booking.patient.name : 'N/A' %></td>
                        <td><%= new Date(booking.date).toDateString() %></td>
                        <td><%= booking.time %></td>
                        <td><%= booking.consultationType %></td>
                        <td><%= booking.hospital ? booking.hospital.name : 'N/A' %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5">No completed bookings available.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
