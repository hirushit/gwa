<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Dashboard</title>
</head>
<body>
    <h1>Welcome, <%= doctor.name %></h1>

    <!-- Display list of chats -->
    <ul>
        <% chats.forEach(chat => { %>
            <li>
                <h3><%= chat.patientId.name %></h3>
                <% if (chat.messages.length > 0) { %>
                    <p>Last Message: <%= chat.messages[chat.messages.length - 1].text %></p>
                    <p>Timestamp: <%= chat.messages[chat.messages.length - 1].timestamp %></p>
                <% } else { %>
                    <p>No messages yet</p>
                <% } %>
                <a href="/doctor/chat/<%= chat._id %>">Chat with <%= chat.patientId.name %></a>
            </li>
        <% }) %>
    </ul>

    <!-- Add new chat button or form -->
    <!-- Example: <a href="/doctor/new-chat">Start New Chat</a> -->

</body>
</html>
