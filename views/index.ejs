<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <!-- Include any necessary CSS files or stylesheets -->
    <style>
        /* Add your custom styles here */
        .blog-box {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 20px;
        }
        .blog-box:hover {
            cursor: pointer;
            background-color: #f0f0f0;
        }
    </style>
</head>
<body>
    <h1>Welcome to Our Blog Portal</h1>

    <div class="blogs-container">
        <% if (verifiedBlogs.length > 0) { %>
            <% verifiedBlogs.forEach(blog => { %>
                <div class="blog-box" onclick="location.href='/patient/blogs/view/<%= blog._id %>';">
                    <h3><%= blog.title %></h3>
                    <% if (blog.image && blog.image.data) { %>
                        <img src="data:<%= blog.image.contentType %>;base64,<%= blog.image.data.toString('base64') %>" alt="<%= blog.title %> Image" width="200">
                    <% } else { %>
                        <p>No Image Available</p>
                    <% } %>
                    <p><%= blog.summary %></p>
                </div>
            <% }); %>
        <% } else { %>
            <p>No verified blogs found.</p>
        <% } %>
    </div>

    <!-- Add any additional HTML elements or scripts as needed -->

</body>
</html>
